<Window x:Class="Práctica_1_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Práctica_1_1"
        mc:Ignorable="d"
        Title="Temperatura" Height="450" Width="800" Icon="c-temperature-folded-icon_30475.ico">
    <StackPanel Orientation="Horizontal">
        <StackPanel>
            <Button Name="Boton_Transformar" Content="Transformar" Padding="2" Margin="10" Click="Boton_Transformar_Click"/>           
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <StackPanel>
                <Label Content="CELSIUS" />
                <TextBox Name="Text_Celsius" Width="100" Height="15"/>
                <Label Content="FAHRENHEIT" />
                <TextBox Name="Text_Fahrenheit" Width="100" Height="15"/>
            </StackPanel>
            <StackPanel>
                <Label Content="FAHRENHEIT" />
                <TextBox Name="Text_Fah" Background="LightGreen" Width="100" Height="15"/>               
                <Label Content="CELSIUS" />
                <TextBox Name="Text_Cel" Background="LightGreen" Width="100" Height="15"/>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Window>
